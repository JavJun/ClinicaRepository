<%= simple_form_for(@advice) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :creation %>
    <%= f.input :activate_advice %>
    <%= f.input :validate_advice %>
    <%= f.association :theme %>
    <%= f.input :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
