<p id="notice"><%= notice %></p>

<h1>Advices</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Creation</th>
      <th>Activate advice</th>
      <th>Validate advice</th>
      <th>Theme</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advices.each do |advice| %>
      <tr>
        <td><%= advice.description %></td>
        <td><%= advice.creation %></td>
        <td><%= advice.activate_advice %></td>
        <td><%= advice.validate_advice %></td>
        <td><%= advice.theme %></td>
        <td><%= advice.user %></td>
        <td><%= link_to 'Show', advice %></td>
        <td><%= link_to 'Edit', edit_advice_path(advice) %></td>
        <td><%= link_to 'Destroy', advice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

