<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :middle %>
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :age %>
    <%= f.input :pregnancy %>
    <%= f.input :register %>
    <%= f.input :nickname %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
